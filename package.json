      "@tsed/di": "^7.67.5",
      "@tsed/engines": "^7.67.5",
      "@tsed/exceptions": "^7.67.5",
      "@tsed/json-mapper": "^7.67.5",
      "@tsed/logger": "^6.7.5",
      "@tsed/logger-file": "^6.7.5",
      "@tsed/openspec": "^7.67.5",
      "@tsed/platform-cache": "^7.67.5",
      "@tsed/platform-exceptions": "^7.67.5",
      "@tsed/platform-express": "^7.67.5",
      "@tsed/platform-log-middleware": "^7.67.5",
      "@tsed/platform-middlewares": "^7.67.5",
      "@tsed/platform-params": "^7.67.5",
      "@tsed/platform-response-filter": "^7.67.5",
      "@tsed/platform-views": "^7.67.5",
      "@tsed/schema": "^7.67.5",
      "@tsed/swagger": "^7.67.5",
      "ajv": "^8.12.0",
      "barrelsby": "^2.8.1",
      "bcrypt": "^5.1.1",
      "body-parser": "^1.20.2",
      "class-transformer": "^0.5.1",
      "class-validator": "^0.14.1",
      "compression": "^1.7.4",
      "cookie-parser": "^1.4.6",
      "cors": "^2.8.5",
      "cross-env": "^7.0.3",
      "dotenv": "^16.4.5",
      "dotenv-expand": "^11.0.6",
      "dotenv-flow": "^4.1.0",
      "express": "^4.19.2",
      "method-override": "^3.0.0",
      "pg": "^8.4.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.3.20"
