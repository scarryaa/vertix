      "@tsed/cli-plugin-eslint": "5.1.2",
      "@tsed/cli-plugin-jest": "5.1.2",
      "@tsed/cli-plugin-typeorm": "5.1.2",
      "@types/compression": "^1.7.5",
      "@types/cookie-parser": "^1.4.7",
      "@types/cors": "^2.8.17",
      "@types/express": "^4.17.21",
      "@types/jest": "^29.5.12",
